<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Users</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Google Fonts: Poppins -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: 'Poppins', sans-serif;
    }
  </style>
</head>
<body class="bg-gradient-to-br from-zinc-900 to-zinc-800 min-h-screen text-white px-6 py-10">

  <!-- Back Link -->
  <div class="mb-6">
    <a href="/" class="text-blue-400 hover:text-blue-300 transition text-sm">&larr; Back to Home</a>
  </div>

  <!-- Heading -->
  <h1 class="text-4xl font-bold mb-10 text-center">All Users</h1>

  <!-- User Grid -->
  <div class="grid gap-8 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    
    <!-- User Card -->
    <% if(users.length === 0) { %>
      <div class="col-span-1 sm:col-span-2 md:col-span-3 lg:col-span-4 text-center">
        <p class="text-lg text-gray-400">No users found.</p>
      </div>
    <% } else { %>
    <% users.forEach( (user)=>{ %>
      <div class="bg-zinc-800 border border-zinc-700 rounded-xl overflow-hidden shadow-md hover:shadow-xl transition duration-300 transform hover:-translate-y-1">
        <img src="<%= user.imageurl %>" alt="User Image" class="w-full h-52 object-cover overflow-hidden">
        <div class="p-5">
          <h3 class="text-xl font-semibold mb-1"><%= user.name %></h3>
          <p class="text-sm text-zinc-400 mb-4"><%= user.email %></p>
          <div class="flex justify-between">
            <a href="/edit/<%= user._id %>" class="text-blue-500 hover:text-blue-600 font-medium text-sm transition">Edit</a>
            <a href="/delete/<%= user._id %>" class="text-red-500 hover:text-red-600 font-medium text-sm transition">Delete</a>
          </div>
        </div>
      </div>
    <% }) } %>
    

  </div>
</body>
</html>
