<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Users</title>
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Google Fonts: Poppins -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: 'Poppins', sans-serif;
    }
  </style>
</head>
<body class="bg-gradient-to-br from-gray-900 via-zinc-900 to-gray-800 min-h-screen text-white px-6 py-10">

  <!-- Back Link -->
  <div class="mb-6">
    <a href="/" class="text-blue-400 hover:text-blue-300 transition text-sm font-medium">&larr; Back to Home</a>
  </div>

  <!-- Heading -->
  <h1 class="text-4xl font-extrabold mb-10 text-center text-blue-400">All Users</h1>

  <!-- User Grid -->
  <div class="grid gap-8 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    
    <!-- No Users -->
    <% if(users.length === 0) { %>
      <div class="col-span-full text-center">
        <p class="text-lg text-gray-400">No users found.</p>
      </div>
    <% } else { %>

    <% users.forEach((user) => { %>
      <div class="bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl overflow-hidden shadow-lg hover:shadow-blue-500/20 transform hover:-translate-y-1 transition duration-300">
        <img src="<%= user.imageurl %>" alt="User Image" class="w-full h-52 object-cover" />
        <div class="p-5">
          <h3 class="text-xl font-semibold mb-1 text-white"><%= user.name %></h3>
          <p class="text-sm text-gray-400 mb-4"><%= user.email %></p>
          <div class="flex justify-between">
            <a href="/edit/<%= user._id %>" class="text-blue-400 hover:text-blue-500 font-medium text-sm transition">Edit</a>
            <a href="/delete/<%= user._id %>" class="text-red-400 hover:text-red-500 font-medium text-sm transition">Delete</a>
          </div>
        </div>
      </div>
    <% }) } %>

  </div>
</body>
</html>
